### DEFAULT ###########################################
PHP_DIRECTORY=api

### PHP Version ###########################################

# Select a PHP version of the Workspace and PHP-FPM containers (Does not apply to HHVM).
# Accepted values: 8.2 - 8.1 - 8.0 - 7.4 - 7.3 - 7.2 - 7.1 - 7.0 - 5.6
PHP_VERSION=8.2

### PHP_FPM ###############################################
PHP_FPM_INSTALL_MONGO=true
